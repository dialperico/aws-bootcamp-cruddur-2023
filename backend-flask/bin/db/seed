#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL='db-seed'
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"


echo "executing dp-seed-load proccess"
seed_path="$(realpath .)/db/seed.sql"
echo $seed_path

if [ "$1" = "prod" ]; then
    echo "using production env"
    CON_URL=$PROD_CONNECTION_URL
else
    echo "using dev env"
    CON_URL=$CONNECTION_URL
fi

psql $CON_URL cruddur < $seed_path